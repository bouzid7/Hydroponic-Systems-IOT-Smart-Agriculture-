<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controller.MainActivity"
    android:layout_gravity="center"
    android:gravity="center">

    <!-- BEGIN/ layout of authentication (Log in) -->
    <LinearLayout
        android:id="@+id/layout_auth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        android:layout_marginBottom="200dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="30dp"
            android:textColor="@color/green"
            android:textStyle="italic"
            android:padding="20dp"
            android:shadowColor="#80000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/greenhouselogo1"
                android:layout_marginLeft="30dp"
                />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_auth"
                android:layout_width="match_parent"
                android:background="@drawable/search_view"
                android:padding="18dp"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_auth"
                android:layout_width="match_parent"
                android:background="@drawable/search_view"
                android:padding="18dp"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/bt_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign in"
            android:textColor="#6200EE"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/green"
            />
        <Button
            android:id="@+id/btt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:textColor="#6200EE"
            android:background="@color/green"
            />
    </LinearLayout>

    <!-- END/ layout of authentication (Log in) -->


    <!-- BEGIN/ layout of registration (sign up) it's invisible(visibility=gone) -->
    <LinearLayout
        android:id="@+id/layout_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New overseer"
                android:textSize="30dp"
                android:textColor="#1AFF00"
                android:textStyle="italic"
                android:padding="20dp"
                android:shadowColor="#80000000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/greenhouselogo1"
                android:layout_marginLeft="60dp"
                />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstname_acc"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastname_acc"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="number phone"
            android:textColorHint="@color/black"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_acc"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_acc"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/black"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_acc"
                android:background="@drawable/search_view"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btt_singapp_acc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:textColor="#6200EE"
            android:background="@color/green"
            />

        <Button
            android:id="@+id/btt_cancel_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="#6200EE"
            android:layout_marginTop="10dp"
            android:background="#B00020"
            />

    </LinearLayout>

    <!-- END/ layout of registration (sign up) it's invisible(visibility=gone) -->
</LinearLayout>