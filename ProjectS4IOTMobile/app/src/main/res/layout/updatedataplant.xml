<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".Controller.ReceiveDataToUpdate">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backk"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text=" Update plant"
            android:textColor="#6200EE"
            android:textSize="30dp"
            android:textStyle="italic"
            android:shadowColor="#80000000"
            android:shadowDx="20"
            android:shadowDy="30"
            android:shadowRadius="10"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField1"
            style="@style/Widget.MaterialComponents.ActionBar.Solid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/search_view"
            android:textColorHint="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameNewPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1000"
                android:padding="16dp"
                android:textColor="@color/black"
                android:text=""
                android:textSize="20dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField2"
            style="@style/Widget.MaterialComponents.ActionBar.Solid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:scrollbarSize="@android:dimen/app_icon_size"
            android:textColorHint="#6200EE"
            android:background="@drawable/search_view"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/infoNewPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1000"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/imagePlant"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/camera"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload new image"
                android:textColor="#ee0202"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >
            <Button
                android:id="@+id/updatePlant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="update"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:background="#03DAC6"
                android:layout_marginLeft="50dp"
                />
            <Button
                android:id="@+id/cancelPlant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cancel"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:background="#C51162"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>